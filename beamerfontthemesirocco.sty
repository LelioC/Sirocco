\RequirePackage{fontspec}

\usefonttheme{professionalfonts} % For regular math font
\setmainfont{Roboto} % serif
\setsansfont{Roboto} % sans serif
\setmonofont{Roboto} % mono spaced

% Outer
\setbeamerfont{frametitle}{size=\large, shape=\scshape}
\setbeamerfont{framesubtitle}{size=\normalsize, shape=\normalfont}
\setbeamerfont{footline}{size=\scriptsize}
\setbeamerfont{framenumber}{size=\scriptsize}
\setbeamerfont{totalframenumber}{size=\scriptsize}

% Inner
\setbeamerfont{author}{size=\normalsize}
\setbeamerfont{institute}{size=\normalsize}
\setbeamerfont{date}{size=\normalsize}
\setbeamerfont{subtitle}{size=\large}
\setbeamerfont{title}{size=\LARGE, shape=\scshape}
\setbeamerfont{title page}{size=\normalsize}

\setbeamerfont{section page}{size=\LARGE, shape=\scshape}
\setbeamerfont{subsection page}{size=\Large, shape=\itshape}

\setbeamerfont{block title}{size=\normalsize, shape=\scshape}
\setbeamerfont{block body}{size=\normalsize}

\setbeamerfont{block title example}{size=\normalsize, shape=\scshape}
\setbeamerfont{block body example}{size=\normalsize}

\setbeamerfont{block title alerted}{size=\normalsize, shape=\scshape}
\setbeamerfont{block body alerted}{size=\normalsize}

\setbeamerfont{panel title}{size=\normalsize, shape=\scshape\bfseries}
\setbeamerfont{panel body}{size=\normalsize}

\setbeamerfont{definition title}{size=\normalsize, shape=\scshape}
\setbeamerfont{definition body}{size=\normalsize}

\setbeamerfont{proposition title}{size=\normalsize, shape=\scshape}
\setbeamerfont{proposition body}{size=\normalsize}

\setbeamerfont{theorem title}{size=\normalsize, shape=\scshape}
\setbeamerfont{theorem body}{size=\normalsize}

\setbeamerfont{caption name}{size=\scriptsize, shape=\scshape}
\setbeamerfont{caption}{size=\scriptsize}

\setbeamerfont{footnote}{size=\tiny}
\setbeamerfont{footnote mark}{size=\tiny}